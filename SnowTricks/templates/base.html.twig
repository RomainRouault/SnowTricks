<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}SnowTricks{% endblock %}</title>
        {% block stylesheets %}
        <link href=" {{ asset('build/css/app.css') }}" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body>
        {{ include('layout/_menu.html.twig') }}
        {% block body %}
            {% block footer %}{% endblock %}
            {% block modal %}{% endblock %}
        {% endblock %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
            <div class="flash-notice-{{ label }}">
                {{ message }}
            </div>
            {% endfor %}
        {% endfor %}
        {% block javascripts %}
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
